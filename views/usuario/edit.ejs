<%- include('../partials/header.ejs') %>

<%- include('../partials/navbar.ejs') %>

<br/>
  <div class="container">
    <h3 class="mb-4">Cadastro de Usuarios</h3>
    <form method="post" action="/usuarios/update/<%= usuario.id %>">
      <div class="row mb-3">
        <div class="col-md-8">
          <label for="nome" class="form-label fw-bold">Nome</label>
          <input type="text" id="nome" class="form-control border border-2" name="nome" value="<%= usuario.nome %>">
        </div>
         <div class="col-md-4">
          <label for="nome_user" class="form-label fw-bold">Nome de Perfil</label>
          <input type="text" id="nome_user" class="form-control border border-2" name="nome_user" value="<%= usuario.nome_user %>">
        </div>
      </div>
        <div class="col-md-4">
          <label for="senha" class="form-label fw-bold">Senha</label>
          <input type="password" id="senha" class="form-control border border-2" name="senha" value="<%= usuario.senha %>">
        </div>
      </div>
        <div class="col-md-4">
          <label for="cpf" class="form-label fw-bold">CPF</label>
          <input type="text" id="cpf" class="form-control border border-2" name="cpf" value="<%= usuario.cpf %>">
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-12">
          <label for="email" class="form-label fw-bold">Email</label>
          <input type="email" id="email" class="form-control border border-2" name="email" value="<%= usuario.email %>">
        </div>
      </div>

      <div class="d-flex gap-3">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a href="/usuarios" class="btn btn-danger">Cancelar</button>
      </div>
    </form>
  </div>

  <%- include('../partials/footer.ejs') %>